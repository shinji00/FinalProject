<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sj.cy.board.MyMapper">

<!-- p_id의 전체 게시물 가져오기  -->
<select id="showBoard" resultType="com.sj.cy.board.Board" parameterType="String">
select * from board where b_writer=#{p_id} order by b_date desc
</select>

<select id="showAllBoard" resultType="com.sj.cy.board.Board">
select * from board order by b_date desc
</select>



<insert id="regBoard" parameterType="com.sj.cy.board.Board"> 
insert into board values (board_seq.nextval, #{b_title}, #{b_content}, #{b_writer}, 0, sysdate)
</insert>

<!-- 삭제 -->
<delete id="delBoard" parameterType="com.sj.cy.board.Board">
delete from board where b_no = #{b_no}
</delete>

<select id="showDetail" resultType="com.sj.cy.board.Board">
	select * from board where b_no = #{b_no}
</select>

<update id="updateHit" parameterType="com.sj.cy.board.Board">
	update board set b_hit = b_hit+1 where b_no = #{b_no}
</update>


<!-- 수정  -->
<update id="modBoard" parameterType="com.sj.cy.board.Board">
	update board set b_title = #{b_title}, b_content = #{b_content}  where b_no = #{b_no}
</update>



